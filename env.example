# ============================================================
# ALMA Platform — env.example
# ============================================================
# Cómo usar este archivo:
#   cp env.example .env.local
#   nano .env.local   ← completar todos los valores reales
#
# NUNCA subas .env.local al repositorio.
# ============================================================


# ==========================================
# Configuración de la aplicación
# ==========================================
NEXT_PUBLIC_APP_NAME=ALMA Platform

# URL pública del servidor (sin barra final)
# Desarrollo: http://localhost:3000
# Producción: https://tudominio.com
APP_BASE_URL=https://tudominio.com


# ==========================================
# Credenciales del administrador
# ==========================================
# Email del administrador principal del sistema
ADMIN_EMAIL=admin@tudominio.com
# PIN de 4 dígitos numéricos del administrador (ej: 1234)
# Este PIN se valida directamente desde .env, no desde la base de datos
ADMIN_PASSWORD=1234


# ==========================================
# Base de datos MySQL
# ==========================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=alma_platform
DB_USER=alma_user
DB_PASSWORD=contraseña_mysql_segura_aqui


# ==========================================
# Autenticación — JWT
# ==========================================
# Generá un string aleatorio largo, por ejemplo:
#   node -e "console.log(require('crypto').randomBytes(48).toString('hex'))"
JWT_SECRET=cambiar_por_string_aleatorio_de_48_bytes

# Duración del token de verificación de email (en horas)
EMAIL_VERIFICATION_TOKEN_TTL_HOURS=24


# ==========================================
# Envío de emails — Resend
# ==========================================
# Obtenés la API key en https://resend.com
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxx

# Dirección de origen de los emails (debe estar verificada en Resend)
MAIL_FROM=noreply@tudominio.com
